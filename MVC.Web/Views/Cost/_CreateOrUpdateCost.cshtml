@model MVC.Model.Cost

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "costForm" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-bind="click:close" aria-hidden="true">×</button>
        <h5 class="modal-title"><strong>Manage Cost</strong></h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 col-xs-12 " style="padding-right:0;">
                <div class="form-group form-inline col-md-6 col-sm-6" style="padding:0">
                    <div class="col-md-4 col-sm-4">
                        <div style="float:left;">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7">
                        <input type="text" class="form-control" id="Name" name="Name" data-bind="value:Cost.Name"/>
                               @* @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })*@
                    </div>
                    </div>
                <div class="form-group form-inline col-md-6 col-sm-6" style="padding:0">
                    <div class="col-md-4 col-sm-4">
                        <div style="float:left;">
                            @Html.LabelFor(model => model.Dated, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7">
                        <input type="text" data-format="dd-MM-yyyy" class="form-control data-role=" datepicker" data-bind="value:Cost.Dated" id="Dated" name="Dated"></div>
                </div>
                <div class="form-group form-inline col-md-6 col-sm-6" style="padding:0">
                    <div class="col-md-4 col-sm-4">
                        <div style="float:left;">
                            @Html.LabelFor(model => model.EstimatedCost, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7">
                        <input type="text" class="form-control" id="EstimatedCost" name="EstimatedCost" data-bind="value:Cost.EstimatedCost" />                       
                    </div>
                </div>
                <div class="form-group form-inline col-md-6 col-sm-6" style="padding:0">
                    <div class="col-md-4 col-sm-4">
                        <div style="float:left;">
                            @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7">
                        <input class="form-control" id="Priority" name="Priority" data-placeholder="Select Priority"/>

                    </div>
                </div>
               
                </div><br clear="all" />
            <div class="col-md-12 col-xs-12 " style="padding-right:0;">
                <div class="form-group form-inline col-md-12 col-sm-12" style="padding:0">
                    <div class="col-md-2 col-sm-2">
                        <div style="float:left;">
                            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-10">
                        <textarea id="Description" name="Description" cols="50" rows="5"></textarea>
                    </div>
                </div>
            </div>
            </div>
        </div>
    <div class="clearfix"></div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bind="click:save">Save</button>
        <button type="button" class="btn btn-primary" data-bind="click:close">Close</button>
    </div>
}

<script type="text/javascript">
    var costData =@Html.Raw(Json.Encode(Model))
</script>
<script src="~/Scripts/js/CostEdit.js"></script>